*/The program allows users to input grades for multiple subjects or assignments, calculates the average grade, and displays the overall grade along with a letter grade and GPA.*/

def calculate_letter_grade(average):
    if average >= 90:
        return "A", 4.0
    elif average >= 80:
        return "B", 3.0
    elif average >= 70:
        return "C", 2.0
    elif average >= 60:
        return "D", 1.0
    else:
        return "F", 0.0

def manage_grades():
    print("Welcome to the Student Grade Tracker!")
    grades = {}

    while True:
        print("\nMenu:")
        print("1. Add grade for a subject/assignment")
        print("2. View grades")
        print("3. Calculate average and overall grade")
        print("4. Exit")

        try:
            choice = int(input("Enter your choice (1-4): "))

            if choice == 1:
                subject = input("Enter the subject or assignment name: ")
                grade = float(input(f"Enter the grade for {subject} (0-100): "))
                if 0 <= grade <= 100:
                    grades[subject] = grade
                    print(f"Grade for {subject} added successfully!")
                else:
                    print("Grade must be between 0 and 100. Try again.")
            elif choice == 2:
                if grades:
                    print("\nCurrent Grades:")
                    for subject, grade in grades.items():
                        print(f"{subject}: {grade}")
                else:
                    print("No grades entered yemanat.")
            elif choice == 3:
                if grades:
                    average = sum(grades.values()) / len(grades)
                    letter_grade, gpa = calculate_letter_grade(average)
                    print(f"\nOverall Average: {average:.2f}")
                    print(f"Letter Grade: {letter_grade}")
                    print(f"GPA: {gpa:.2f}")
                else:
                    print("No grades available to calculate average.")
            elif choice == 4:
                print("Exiting the program. Goodbye!")
                break
            else:
                print("Invalid choice. Please select a valid option.")
        except ValueError:
            print("Invalid input. Please enter a number.")
